<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
   <h1><%- title %></h1> 

    <!-- Displays flash message if provided -->
     <!-- <% if (locals.message) { %>
            <div class="message">
                <%- messages() %>
            </div>
       <% } %> -->
       <!-- <%- messages() %> -->

    <!-- Registration view error display  -->
     <% if (errors) { %>
        <ul class="notice"
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>


    <!-- Registration Form  -->
     <!-- <p>All fields are required.</p> -->
     <form action="/account/register" method="post">
        <label for="account_firstname">First name:</label><br>
        <input type="text" id="account_firstname" name="account_firstname" required><br>

        <label for="account_lastname">Last name:</label><br>
        <input type="text" id="account_lastname" name="account_lastname" required><br>

        <label for="account_email">Email address:</label><br>
        <input type="email" id="account_email" name="account_email" required placeholder="Enter a valid email address"><br>

        <label for="account_password">Password:</label><br>
        <input type="password" id="accountPassword" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <span><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></span>
        <div id="pswBtn">Show Password</div><br>

        <input type="submit" value="Register">
     </form>

     
</body>
</html>